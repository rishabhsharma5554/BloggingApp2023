package com.blog.app.services.impl;

import java.util.List;

import org.modelmapper.ModelMapper;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.blog.app.entites.Post;
import com.blog.app.entites.User;
import com.blog.app.payloads.PostDTO;
import com.blog.app.repos.PostRepo;
import com.blog.app.services.PostService;

@Service
public class PostServiceImpl implements PostService {

	
	@Autowired
	private PostRepo postRepo;
	
	@Autowired 
	private ModelMapper modelMapper;
	
	private Post dtotoEntity(PostDTO postDTO)
	{
		Post post = this.modelMapper.map(postDTO, Post.class);
		return post;
	}
	
	private PostDTO entityToDto(Post post)
	{
		PostDTO postDTO = this.modelMapper.map(post, PostDTO.class);
		return postDTO;
	}
	
	
	@Override
	public Post createPost(PostDTO postDTO) {
		Post post = this.dtotoEntity(postDTO);
		return this.postRepo.save(post);
	}

	@Override
	public Post updatePost(PostDTO postDTO, Integer postId) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public void deletePost(Integer postId) {
		// TODO Auto-generated method stub

	}

	@Override
	public List<Post> getAllPosts() {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public Post getPostById(Integer postId) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public List<Post> getPostsByCategoryId(Integer catId) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public List<User> getPostsByUserId(Integer userId) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public List<Post> searchPostsByKeyword(String keyword) {
		// TODO Auto-generated method stub
		return null;
	}

}
